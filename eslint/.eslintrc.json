{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"env": {
		"es6": true
	},
	"globals": {
		"$": true,
		"alert": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"array-bracket-spacing": [ 2, "always", { "singleValue": false } ], // Fixable
		"arrow-body-style": [2, "always"],
		"arrow-parens": [2, "always"],
		"arrow-spacing": [2, { "before": true, "after": true }], // Fixable
		"block-spacing": [ 2, "always"], // Fixable
		"brace-style": [ 2, "1tbs", { "allowSingleLine": false } ],
		"camelcase": [ 2, {"properties": "always"}],
		"comma-spacing": [ 2, {"before": false, "after": true} ], // Fixable
		"complexity": [ 2, 5 ],
		"computed-property-spacing": [ 2, "always" ], // Fixable
		"consistent-this": [ 2, "self" ],
		"eol-last": [2], // Fixable
		"indent": [ 2, "tab", {"SwitchCase": 1} ], // Fixable
		"key-spacing": [ 2, { "beforeColon": false, "afterColon": true } ],
		"keyword-spacing": [2],
		"linebreak-style": [ 2, "unix" ],
		"new-cap": [2],
		"no-empty": [2],
		"no-extra-semi": 2, // Fixable
		"no-magic-numbers": [ 2, { "ignore": [ -1, 0, 1, 2] } ],
		"no-multi-spaces": [ 2, { "exceptions": { "Property": false } } ], // Fixable
		"no-mixed-spaces-and-tabs": [ 2, "smart-tabs" ],
		"no-nested-ternary": [2],
		"no-redeclare": [2, {"builtinGlobals": true}],
		"no-spaced-func": [2], // Fixable
		"no-trailing-spaces": [2], // Fixable
		"no-use-before-define": [ 2, "nofunc" ],
		"quotes": [ 2, "single" ], // Fixable
		"radix": [ 2, "always" ],
		"require-jsdoc": [1, {
			"require": {
				"FunctionDeclaration": true,
				"MethodDefinition": false,
				"ClassDeclaration": false
			}
		}],
		"semi": [ 2, "always" ], // Fixable
		"space-before-blocks": [2], // Fixable
		"space-before-function-paren": [ 2, "never" ], // Fixable
		"space-in-parens": [2, "always", { "exceptions": ["{}", "[]", "()", "empty"] }], // Fixable
		"vars-on-top": [2]
	}
}
